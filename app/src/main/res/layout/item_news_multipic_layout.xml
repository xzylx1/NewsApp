<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#30000000">

    <TextView
            android:id="@+id/list_title_txt_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A股再暴跌逾5% 两市千股跌停"
            android:singleLine="true"
            android:textColor="@android:color/background_dark"/>

    <ImageView
            android:id="@+id/list_icon_img1_multi"
            android:layout_width="115dp"
            android:layout_height="85dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/list_title_txt_multi"
            android:layout_alignParentLeft="true"/>
    <ImageView
            android:id="@+id/list_icon_img2_multi"
            android:layout_width="115dp"
            android:layout_height="85dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/list_title_txt_multi"
            android:layout_centerHorizontal="true"/>
    <ImageView
            android:id="@+id/list_icon_img3_multi"
            android:layout_width="115dp"
            android:layout_height="85dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/list_title_txt_multi"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
