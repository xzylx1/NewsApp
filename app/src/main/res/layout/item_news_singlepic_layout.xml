<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#30000000">

    <TextView
            android:id="@+id/list_title_txt"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A股再暴跌逾5% 两市千股跌停"
            android:singleLine="true"
            android:textColor="@android:color/background_dark" />

    <TextView
            android:id="@+id/list_digest_txt"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_title_txt"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:text="沪深300再“触熔”，沪指跌近3000点，两市千股跌停。"/>

    <TextView
            android:id="@+id/list_source_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="3dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:text="网易财经"
            android:textColor="@android:color/holo_blue_dark" />

    <TextView
            android:id="@+id/list_newstime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="3dp"
            android:textSize="14sp"
            android:text="2016-01-11 16:11:59"
            android:textColor="@android:color/tab_indicator_text"
            android:layout_alignRight="@+id/list_digest_txt"/>

    <ImageView
            android:id="@+id/list_icon_img"
            android:layout_width="121dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
